
@{
    ViewData["Title"] = "SignUp";
}



<div>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.0/css/bootstrap.min.css" integrity="sha384-SI27wrMjH3ZZ89r4o+fGIJtnzkAnFs3E4qz9DIYioCQ5l9Rd/7UAa8DHcaL8jkWt" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/css/sitestyles.css" />
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.0/js/bootstrap.min.js" integrity="sha384-3qaqj0lc6sV/qpzrc1N5DC6i1VRn/HyX4qdPaiEFbn54VjQBEU341pvjz7Dv3n6P" crossorigin="anonymous"></script>
</div>

<div>
    <div class="modal-dialog text-center">
        <div class="col-sm-8 main-selector">
            <div class="modal-content div-center">
                <div class="col-12 user-img">
                    <img src="../img/avatar.png" />
                </div>
        
                <form action ="/" method = "post" class="col-12">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="First Name" />
                    </div>
                    
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Last Name" />
                    </div>
                    
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Email" />
                    </div>

                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Username" />
                    </div>

                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="Password" />
                    </div>

                    <button type="submit" class="btn"><i class="fas fa-sign-in-alt"></i>Sign Up!</button>
                </form>

                <div class="col-12 forgot">
                    <a href="/Home/Index">Already have an account? Login!</a> 
                </div>
            </div> <!-- End Of Modal Content-->
        </div>
    </div>
</div>
